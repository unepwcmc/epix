<h1><%= t('search_permit') %></h1>

<div class="row permit-search-form col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
  <%= form_tag(permits_path, method: 'get') do %>
      <div class="form-group">
      <%= label_tag(:country, t('select_country')) %>
      <%= select_tag(
        :country,
        options_for_select(@countries.map { |c| [c.name, c.iso_code2] }),
        class: 'form-control'
      ) %>
    </div>
    <div class="form-group">
      <%= label_tag(:permit_identifier, t('enter_permit_identifier')) %>
      <%= text_field_tag(
        :permit_identifier, nil,
        {class: 'form-control', placeholder: t('permit_identifier'), required: true}
      )%>
    </div>
    <div class="form-group text-center">
      <%= submit_tag(t('search_button_label'), class: 'button search-button') %>
    </div>
  <% end %>
</div>
