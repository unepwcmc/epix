<div class="list-header">
  <h1><%= t('organisations_list') %></h1>
  <div class="buttons">
    <%= link_to t('organisation_new_page'), new_admin_organisation_path , class: 'button' %>
  </div>
</div>

<table id="organisations_table">
  <thead>
    <tr>
      <th><%= t('organisation_id') %></th>
      <th class='searchable'><%= t('organisation_name') %></th>
      <th class='searchable'><%= t('organisation_role') %></th>
      <th class='searchable'><%= t('organisation_country') %></th>
      <th class="no-sort"></th>
      <th class="no-sort"></th>
    </tr>
  </thead>
  <tbody>
    <% @organisations.each do |organisation| %>
      <tr>
        <td>
          <%= organisation.id %>
        </td>
        <td>
          <%= organisation.name %>
        </td>
        <td>
          <%= organisation.role %>
        </td>
        <td>
          <%= organisation.country && organisation.country.name %>
        </td>
        <td>
          <%= link_to(admin_organisation_path(organisation)) { fa_icon "eye" } %>
        </td>
        <td>
          <%= link_to(edit_admin_organisation_path(organisation)) { fa_icon "pencil" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <th></th>
      <th><input type="text" placeholder="<%= t('search_placeholders.name') %>" ></th>
      <th><input type="text" placeholder="<%= t('search_placeholders.role') %>" ></th>
      <th><input type="text" placeholder="<%= t('search_placeholders.country') %>" /></th>
      <th class="no-sort"></th>
    </tr>
  </tfoot>
</table>
